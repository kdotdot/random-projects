<body>
  <% include ../partials/nav.ejs %>
  <div class="intro">
    <h1>Weather app</h1>
    <p>To get the weather from a certain city add the name of the city and click on "Get weather"</p>
  </div>
  <div class=weather-wrapper>
    <fieldset class=weather-field>
      <form class=weather-form action="/weather" method="post">
        <input name="city" type="text" placeholder="Enter a City" required>
        <input type="submit" value="Get Weather">
      </form>
      <% if(weather !== null){ %>
      <h1>
        <%= weather.name %>
        <%= weather.main.temp %>Â°C
      </h1>
      <% } %>
      <% if(error !== null){ %>
      <p>
        <%= error %>
      </p>
      <% } %>
      </p>
    </fieldset>
  </div>
</body>

</html>